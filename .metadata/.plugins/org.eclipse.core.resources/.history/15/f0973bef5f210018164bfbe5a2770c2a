
public class RunnerClass {
	public static void main(String[] args) {
		Grid grid = new Grid();
		GameLogic.startBoatsAI();
		
		
		Battleship bs1 = new Battleship(5,4,3,"up");
		Battleship bs2 = new Battleship(3,1,2,"right");
		
		
		grid.addBattleship(bs1);
		grid.addBattleship(bs2);
		
		
		grid.printGrid();
		
		System.out.println(" ");
		
		AIGrid.printGrid();
		GameLogic.shoot();
		
	}
}
