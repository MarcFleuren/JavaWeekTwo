import java.util.ArrayList;
//import java.util.Arrays;

class Person {
	public String name;
	public int age;
	public String jobTitle;
	
	
	public Person(String name, int age, String jobTitle) {
		this.age = age;
		this.name = name;
		this.jobTitle = jobTitle;
		
	}



	
	
}
public class RunnerClass {
	
	public static void main(String[] args) {
		ArrayList<Person> people = new ArrayList<>();
		
		Person a = new Person("Dave", 23, "Pleb");
		Person b = new Person("Prab", 42, "BCMiner");
		Person c = new Person("Mary", 55, "Proffesional Mum");
		
		people.add(a);
		people.add(b);
		people.add(c);
		
		String searchTerm = "Dave";
		
		for (Person p: people){
			  if (p.name == searchTerm){
			    System.out.println(p.name +" "+ p.age + " " + p.jobTitle);
			  }
		
		
//		for(Person p: people) {
//			System.out.println(p.name +" "+ p.age + " " + p.jobTitle);
//		}
		
		
	}
	}
}


