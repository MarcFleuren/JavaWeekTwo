
public class RunnerClass {
	public static void main(String[] args) {
		Grid grid = new Grid();
		GameLogic.startBoatsAI();
		
		
		Battleship bs1 = new Battleship(5,4,3,"up");
		Battleship bs2 = new Battleship(3,1,2,"right");
		
		
		grid.addBattleship(bs1.getstartX(), bs1.getstartY(),bs1.getLength(), bs1.getDirection());
		grid.addBattleship(bs2.getstartX(), bs2.getstartY(),bs2.getLength(), bs2.getDirection());
		
		
		grid.printGrid();
		System.out.println(" ");
		
		AIGrid.printGrid();
		
	}
}
